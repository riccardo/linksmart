<project name="AQL" basedir="." default="make-local">	
  <property name="moduleName" value="selfstarmanager_aql"/>
  <import file="../build-common.xml"/>

  <property name="javadoc.dir" value="javadoc"/>
  <path id="extendedcp">
    <path refid="classpath"/> <!-- include cp defined in build-common.xml -->
    <pathelement location="${basedir}/libs/antlr-runtime-3.2.jar"/>
  </path>
  
  
  <target name="parserlexer">
    <java jar="libs/antlr-3.2.jar" fork="true" dir="src/eu/linksmart/selfstar/aql/db/parser">
      <arg line="aql.g" />
    </java>
  </target>
  
  <target name="scanner">
    <java jar="libs/jflex.jar" fork="true" dir="src/eu/linksmart/selfstar/aql/parser">
      <arg line="aql_scanner.jlex" />
    </java>
  </target>

  <target name="javadoc">
    <javadoc sourcepath="src" destdir="${javadoc.dir}"/>
  </target>
</project>
