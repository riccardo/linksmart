<?xml version="1.0" encoding="UTF-8"?>

	<!--
		Build file for LinkSmart policy framework extensions author: Marco Tiemann
	-->

<project name="PolicyFrameworkExtensions" default="fail"
	xmlns:ivy="antlib:org.apache.ivy.ant">

	<!-- targets -->

	<!--
		default target fails to encourage using the distribution build file
	-->
	<target name="fail">
		<fail message="please use the root ant build file" />
	</target>

	<!-- make -->
	<target name="make">
		<ant dir="DebugPepObligationObserver" target="make" />
		<ant dir="EventPepObligationObserver" target="make" />
		<ant dir="FilePolicyRepository" target="make" /> 
		<ant dir="SendMailPepObligationObserver" target="make" /> 
		<ant dir="LinkSmartXMLDatabase" target="make" /> 
		<ant dir="XmlDbPolicyRepository" target="make" /> 
		<ant dir="ContextManagerPIP" target="make" />
		<ant dir="OntologyPIP" target="make" />
	</target>

	<!-- test -->
	<target name="test" depends="make">
		<ant dir="DebugPepObligationObserver" target="test" />
		<ant dir="EventPepObligationObserver" target="test" />
		<ant dir="FilePolicyRepository" target="test" />
		<ant dir="SendMailPepObligationObserver" target="test" />
		<ant dir="LinkSmartXMLDatabase" target="test" />
		<ant dir="XmlDbPolicyRepository" target="test" />
		<ant dir="ContextManagerPIP" target="test" />
		<ant dir="OntologyPIP" target="test" />
	</target>

	<!-- clean -->
	<target name="clean">
		<ant dir="DebugPepObligationObserver" target="clean" />
		<ant dir="EventPepObligationObserver" target="clean" />
		<ant dir="FilePolicyRepository" target="clean" />
		<ant dir="SendMailPepObligationObserver" target="clean" />
		<ant dir="LinkSmartXMLDatabase" target="clean" />
		<ant dir="XmlDbPolicyRepository" target="clean" />
		<ant dir="ContextManagerPIP" target="clean" />
	</target>

</project>
