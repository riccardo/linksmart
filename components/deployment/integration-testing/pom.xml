<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>eu.linksmart</groupId>
		<artifactId>linksmart-parent</artifactId>
		<version>2.2.0-SNAPSHOT</version>
	</parent>

	<artifactId>linksmart-deployment-it</artifactId>
	
	<name>LinkSmart intetration test multimodule</name>
    
    <packaging>pom</packaging>
    
    <properties>
        <commons-httpclient.version>3.1_7</commons-httpclient.version>
    </properties>     
    
    <modules>
    	<module>it-utils</module>
        <module>basic-tunneling-it</module>
        <module>standard-tunneling-it</module>
        <module>soap-tunneling-it</module>
<!--         <module>backbone-router-it</module> -->
<!--         <module>backbone-osgi-integration</module> -->
<!--         <module>backbone-soap-integration</module> -->
<!--         <module>backbone-jxta-integration</module> -->
    </modules>

    <scm>
        <connection>scm:svn:https://forge.fit.fraunhofer.de/svn/linksmart/trunk/linksmart-maven/deployment-integration</connection>
        <developerConnection>scm:svn:https://forge.fit.fraunhofer.de/svn/linksmart/trunk/linksmart-maven/deployment-integration</developerConnection>
        <url>https://forge.fit.fraunhofer.de/svn/linksmart/trunk/linksmart-maven/deployment-integration</url>
    </scm>

	<dependencyManagement>
		<dependencies>
			<!-- LinkSmart dependencies -->
			<dependency>
				<groupId>eu.linksmart</groupId>
				<artifactId>eu.linksmart.network.tunnel</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>eu.linksmart</groupId>
				<artifactId>eu.linksmart.network.soaptunneling</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>eu.linksmart</groupId>
				<artifactId>eu.linksmart.network.tunnel.standard</artifactId>
				<version>${project.version}</version>
			</dependency>
            <dependency>
                <groupId>eu.linksmart</groupId>
                <artifactId>eu.linksmart.network.backbone.jxta</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>eu.linksmart</groupId>
                <artifactId>eu.linksmart.network.backbone.impl.osgi</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>eu.linksmart</groupId>
                <artifactId>eu.linksmart.network.backbone.soap</artifactId>
                <version>${project.version}</version>
            </dependency>
            <!-- testing related dependencies -->
            <dependency>
				<groupId>eu.linksmart</groupId>
				<artifactId>it-utils</artifactId>
				<version>${project.version}</version>
			</dependency>
            <dependency>
				<groupId>org.apache.servicemix.bundles</groupId>
				<artifactId>org.apache.servicemix.bundles.commons-httpclient</artifactId>
				<version>${commons-httpclient.version}</version>
				<scope>test</scope>
			</dependency>
        </dependencies>
	</dependencyManagement>
	
	<dependencies>
		<!-- PaxExam dependencies -->
		<dependency>
			<groupId>org.ops4j.pax.exam</groupId>
			<artifactId>pax-exam-junit4</artifactId>
		</dependency>
		<dependency>
			<groupId>org.ops4j.pax.exam</groupId>
			<artifactId>pax-exam-link-mvn</artifactId>
		</dependency>
		<!-- PaxExam decides on a specific OSGi Container for testing based on the 
			maven dependecies, we are using Apache Karaf for in-container OSGi testing -->
		<dependency>
			<groupId>org.ops4j.pax.exam</groupId>
			<artifactId>pax-exam-container-karaf</artifactId>	
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-failsafe-plugin</artifactId>
				<executions>
					<execution>
						<id>verify</id>
						<goals>
							<goal>integration-test</goal>
							<goal>verify</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>