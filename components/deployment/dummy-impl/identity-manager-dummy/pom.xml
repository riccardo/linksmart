	<name>LinkSmart Identity Manager Dummy</name>
	<description>LinkSmart Identity Manager Dummy</description>

	<dependencies>
		<dependency>
			<groupId>eu.linksmart</groupId>
			<artifactId>eu.linksmart.api.identitymanager</artifactId>
		</dependency>
		<dependency>
