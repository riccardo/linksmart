<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>eu.linksmart</groupId>
		<artifactId>linksmart-parent</artifactId>
		<version>2.2.0-SNAPSHOT</version>
	</parent>

	<groupId>eu.linksmart.features</groupId>
	<artifactId>linksmart-deployment-features</artifactId>
	
	<name>LinkSmart OSGi Deployment Features</name>
    
    <packaging>pom</packaging>
     
    <modules>
    	<module>linksmart-features</module>
    	<module>linksmart-testing-features</module>
    	<module>linksmart-services-features</module>
    </modules>
    
    <properties>
    	<linksmart.version>2.2.0-SNAPSHOT</linksmart.version>
    	<linksmart.example.version>2.2.0-SNAPSHOT</linksmart.example.version>
    	<build-helper-maven-plugin.version>1.8</build-helper-maven-plugin.version>
    	<commons-codec.version>1.3_2</commons-codec.version>
        <commons-httpclient.version>3.1_7</commons-httpclient.version>
    </properties> 

    <scm>
        <connection>scm:svn:https://svn.code.sf.net/p/linksmart/code/trunk/components/deployment/features</connection>
        <developerConnection>scm:svn:https://svn.code.sf.net/p/linksmart/code/trunk/components/deployment/features</developerConnection>
        <url>https://svn.code.sf.net/p/linksmart/code/trunk/components/deployment/features</url>
    </scm>

	<build>
		<pluginManagement>
            <plugins>
            	<!-- plugin for Karaf feature -->
            	<plugin>
                	<groupId>org.codehaus.mojo</groupId>
                	<artifactId>build-helper-maven-plugin</artifactId>
                	<version>${build-helper-maven-plugin.version}</version>
            	</plugin>
            </plugins>
        </pluginManagement>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
		<plugins>
            <!-- skip execution of the install plugin for the feature parent pom -->
            <!-- it's needed for maven > 3.0.x  environments -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <inherited>false</inherited>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/resources</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>filter</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>resources</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
			<plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-artifacts</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <file>target/features.xml</file>
                                    <type>xml</type>
                                    <classifier>features</classifier>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
		</plugins>
	</build>

</project>
