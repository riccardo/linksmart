<component name="QoSManager" immediate="true">
<!--  service and its implementation-->
 <service>
<provide interface="eu.linksmart.qos.QoSManager"/>
 </service>
 <implementation class="eu.linksmart.qos.impl.QoSManagerImpl"/>
 <!--  dependencies -->
 <reference bind="bindClientProvider" cardinality="0..1" 
  interface="eu.linksmart.clients.RemoteWSClientProvider" 
  name="RemoteWSClientProvider" policy="dynamic" unbind="unbindClientProvider"/>
 <reference bind="bindNM" cardinality="0..1" 
  interface="eu.linksmart.network.NetworkManagerApplication" 
  name="NetworkManagerApplication" policy="dynamic" unbind="unbindNM"/>
 <reference bind="bindConfiguration" cardinality="1..1" 
  interface="org.osgi.service.cm.ConfigurationAdmin" 
  name="ConfigurationAdmin" policy="dynamic" unbind="unbindConfiguration"/>
 <reference bind="bindOntology" cardinality="1..1" 
  interface="eu.linksmart.aom.ApplicationOntologyManager" 
  name="ApplicationOntologyManager" policy="dynamic" unbind="unbindOntology"/>
<!--  whitepattern property for deploying web service -->
<property name="SOAP.service.name" type="String" value="QoSManagerPort"/>   
</component>
