<?xml version="1.0" encoding="utf-8"?>
<root xmlns="urn:schemas-upnp-org:device-1-0">
    <specVersion>
        <major>1</major>
        <minor>0</minor>
    </specVersion>
    <device>
        <deviceType>upnp:type</deviceType>
        <deviceClass xmlns="hydra">MobilePhone</deviceClass>

        <friendlyName>Basic Phone</friendlyName>
        <manufacturer>CNet</manufacturer>
        <manufacturerURL>http://www.cnet.se</manufacturerURL>
        <modelDescription>Basic Phone</modelDescription>
        <modelName>Z600</modelName>
        <modelNumber>1</modelNumber>

        
        <!-- MANDATORY: ONLY DEVICE SPECIFIC SERVICES WILL BE PARSED .. -->
        <serviceList>
            <service>
                <serviceType>urn:schemas-upnp-org:smsservice::1</serviceType>
                <serviceId>urn:upnp-org:serviceId:smsservice:1</serviceId>
                <SCPDURL> 
                    <scpd xmlns="urn:schemas-upnp-org:service-1-0">
                        <specVersion>

                            <major>1</major>
                            <minor>0</minor>
                        </specVersion>
                        <actionList>
                            <action hydraannotation="">
                                <name>GetNumberOfMessages</name>
                                <argumentList>

                                    <argument>
                                        <name>ReturnNumber</name>
                                        <direction>out</direction>
                                        <retval />
                                        <relatedStateVariable>NumberOfMessages</relatedStateVariable>
                                    </argument>
                                </argumentList>

                            </action>
                            <action hydraannotation="">
                                <name>ReadLatestMessage</name>
                                <argumentList>
                                    <argument>
                                        <name>Message</name>
                                        <direction>out</direction>

                                        <retval />
                                        <relatedStateVariable>Message</relatedStateVariable>
                                    </argument>
                                </argumentList>
                            </action>
                            <action hydraannotation="">
                                <name>ReadMessage</name>
                                <argumentList>

                                    <argument>
                                        <name>status</name>
                                        <direction>in</direction>
                                        <relatedStateVariable>A_ARG_TYPE_ReadMessage_status</relatedStateVariable>
                                    </argument>
                                    <argument>
                                        <name>Position</name>

                                        <direction>in</direction>
                                        <relatedStateVariable>Index</relatedStateVariable>
                                    </argument>
                                    <argument>
                                        <name>Message</name>
                                        <direction>out</direction>
                                        <retval />

                                        <relatedStateVariable>Message</relatedStateVariable>
                                    </argument>
                                </argumentList>
                            </action>
                            <action hydraannotation="">
                                <name>SendSMS</name>
                                <argumentList>
                                    <argument>

                                        <name>Message</name>
                                        <direction>in</direction>
                                        <relatedStateVariable>Message</relatedStateVariable>
                                    </argument>
                                    <argument>
                                        <name>phonenumber</name>
                                        <direction>in</direction>

                                        <relatedStateVariable>A_ARG_TYPE_SendSMS_phonenumber</relatedStateVariable>
                                    </argument>
                                </argumentList>
                            </action>
                        </actionList>
                        <serviceStateTable>
                            <stateVariable sendEvents="no">
                                <name>NumberOfMessages</name>

                                <dataType>i2</dataType>
                            </stateVariable>
                            <stateVariable sendEvents="no">
                                <name>Message</name>
                                <dataType>string</dataType>
                            </stateVariable>
                            <stateVariable sendEvents="no">

                                <name>A_ARG_TYPE_ReadMessage_status</name>
                                <dataType>string</dataType>
                            </stateVariable>
                            <stateVariable sendEvents="no">
                                <name>A_ARG_TYPE_SendSMS_phonenumber</name>
                                <dataType>string</dataType>
                            </stateVariable>

                            <stateVariable sendEvents="no">
                                <name>Index</name>
                                <dataType>i2</dataType>
                            </stateVariable>
                        </serviceStateTable>
                    </scpd>
                </SCPDURL>
                <controlURL>_urn:upnp-org:serviceId:smsservice:1_control</controlURL>

                <eventSubURL>_urn:upnp-org:serviceId:smsservice:1_event</eventSubURL>
            </service>
            <service>
            
                <!-- NOT PARSED: START - USED ONLY TO DECIDE, IF THE 
                     SET OF SERVICES IS DEVICE SPECIFIC --> 
                <serviceType>urn:schemas-upnp-org:bluetoothservice::1</serviceType>
                <serviceId>urn:upnp-org:serviceId:bluetoothservice:1</serviceId>
                <!-- NOT PARSED: STOP -->
                 
                <SCPDURL> 
                    <scpd xmlns="urn:schemas-upnp-org:service-1-0">

                        <specVersion>
                            <major>1</major>
                            <minor>0</minor>
                        </specVersion>
                        <actionList>
                            <action hydraannotation="">
                                <name>GetNumberOfMessages</name>

                                <argumentList>
                                    <argument>
                                        <name>ReturnNumber</name>
                                        <direction>out</direction>
                                        <retval />
                                        <relatedStateVariable>NumberOfMessages</relatedStateVariable>
                                    </argument>

                                </argumentList>
                            </action>
                            <action hydraannotation="">
                                <name>ReadLatestMessage</name>
                                <argumentList>
                                    <argument>
                                        <name>Message</name>
                                        <direction>out</direction>

                                        <retval />
                                        <relatedStateVariable>Message</relatedStateVariable>
                                    </argument>
                                </argumentList>
                            </action>
                            <action hydraannotation="">
                                <name>ReadMessage</name>
                                <argumentList>

                                    <argument>
                                        <name>status</name>
                                        <direction>in</direction>
                                        <relatedStateVariable>A_ARG_TYPE_ReadMessage_status</relatedStateVariable>
                                    </argument>
                                    <argument>
                                        <name>Position</name>

                                        <direction>in</direction>
                                        <relatedStateVariable>Index</relatedStateVariable>
                                    </argument>
                                    <argument>
                                        <name>Message</name>
                                        <direction>out</direction>
                                        <retval />

                                        <relatedStateVariable>Message</relatedStateVariable>
                                    </argument>
                                </argumentList>
                            </action>
                            <action hydraannotation="">
                                <name>SendSMS</name>
                                <argumentList>
                                    <argument>

                                        <name>Message</name>
                                        <direction>in</direction>
                                        <relatedStateVariable>Message</relatedStateVariable>
                                    </argument>
                                    <argument>
                                        <name>phonenumber</name>
                                        <direction>in</direction>

                                        <relatedStateVariable>A_ARG_TYPE_SendSMS_phonenumber</relatedStateVariable>
                                    </argument>
                                </argumentList>
                            </action>
                        </actionList>
                        <serviceStateTable>
                            <stateVariable sendEvents="no">
                                <name>NumberOfMessages</name>

                                <dataType>i2</dataType>
                            </stateVariable>
                            <stateVariable sendEvents="no">
                                <name>Message</name>
                                <dataType>string</dataType>
                            </stateVariable>
                            <stateVariable sendEvents="no">

                                <name>A_ARG_TYPE_ReadMessage_status</name>
                                <dataType>string</dataType>
                            </stateVariable>
                            <stateVariable sendEvents="no">
                                <name>A_ARG_TYPE_SendSMS_phonenumber</name>
                                <dataType>string</dataType>
                            </stateVariable>

                            <stateVariable sendEvents="no">
                                <name>Index</name>
                                <dataType>i2</dataType>
                            </stateVariable>
                        </serviceStateTable>
                    </scpd>
                </SCPDURL>
            </service>

        </serviceList>

		<!-- MANDATORY: DISCOVERY INFORMATION -->
		<tellstickdevice>
		  <name>DiscoBall</name>
		  <vendor>Nexa</vendor>
		  <deviceid>3</deviceid>
		</tellstickdevice>

		<!-- MANDATORY: DDK CONFIGURATION OF DEVICE MODEL -->
		<Configuration implementationClass="some.impl.Class" name="config name">
			<AssociatedFile downloadURL="http://to.download/1" storageFolder="file://to.store/1"/>
			<AssociatedFile downloadURL="http://to.download/2" storageFolder="file://to.store/2"/>
		</Configuration>

		<!-- OPTIONAL: ENERGY PROFILE -->        
		<energyprofile>
		  <name>Disco Ball</name>

		  <id>1</id>
		  <device>1</device>
		  <energyclassification>
		    <system>SIS</system>
		    <value>B</value>
		  </energyclassification>
		
		  <energyconsumption>

		    
		    <effect>
		      <mode name="running">
		        <max>1</max>
		        <average>2</average>
		        <start>3</start>
		        <shutdown>4</shutdown>
		      </mode>

		      <mode name="standby">
		        <max>10</max>
		        <average>5</average>
		        <start>3</start>
		        <shutdown>4</shutdown>
		      </mode>
		    </effect>

		  </energyconsumption>
		
		  <energygeneration>
		    <effect>
		    <mode name="running">
		      <max>5</max>
		      <average>3</average>
		      <start>11</start>

		      <shutdown>12</shutdown>
		    </mode>
		    <mode name="standby">
		      <max>0</max>
		      <average>1</average>
		      <start>13</start>
		      <shutdown>14</shutdown>

		    </mode>
		    </effect>
		  </energygeneration>
		
		  <operation>
		    <minimumruntime unit="seconds">5</minimumruntime>
		  </operation>
		  <lifetime>
		    <expected unit="seconds">1000000</expected>

		    <startcost unit="seconds">1000</startcost>
		    <shutdowncost unit="seconds">100</shutdowncost>
		  </lifetime>
		</energyprofile>
        
        <!-- OPTIONAL: LIST OF EVENTS -->
        <eventList>
			<event>
				<eventTopic>

					TemperatureChange
				</eventTopic>
				<eventKeyList>
					<eventKey>
						<name>HID</name>
						<dataType>String</dataType>
					</eventKey>
					<eventKey>

						<name>TimeStamp</name>
						<dataType>Long</dataType>
					</eventKey>
					<eventKey>
						<name>TemperatureValue</name>
						<dataType>Integer</dataType>
						<!-- related state var should be defined for the 
						     keys handling the value -->

						<relatedStateVariable>Temperature</relatedStateVariable>
						<!-- allowed val range is used only for number types -->
						<allowedValueRange>
							<max>50</max>
							<min>-30</min>
						</allowedValueRange>
						<!-- unit have to be linked to the QoS model -->

						<unit>Celsius</unit>
					</eventKey>
				</eventKeyList>
				<metaInformation>
					<frequency>
						<value>10</value>
						<unit>Seconds</unit>

					</frequency>
					<eventTrigger>TemperatureChange</eventTrigger>
					<description>Reports change on temperature</description>
				</metaInformation>
			</event>
				<event>
				<eventTopic>
					TemperatureAlarm
				</eventTopic>

				<eventKeyList>
					<eventKey>
						<name>HID</name>
						<dataType>String</dataType>
					</eventKey>
					<eventKey>
						<name>TimeStamp</name>

						<dataType>Long</dataType>
					</eventKey>
					<eventKey>
						<name>ErrorCode</name>
						<dataType>String</dataType>
						<relatedStateVariable>Temperature</relatedStateVariable>
						<allowedValueRange>

							<max>50</max>
							<min>-30</min>
						</allowedValueRange>
						<!-- unit have to be linked to the QoS model -->
						<unit>Fahrenheit</unit>
					</eventKey>
				</eventKeyList>

				<metaInformation>
					<frequency>
						<value>10</value>
						<unit>Seconds</unit>
					</frequency>
					<eventTrigger>Temperature greater 50 || Temperature less -30 </eventTrigger>
					<description>Reports a malfunction of the device</description>

				</metaInformation>
			</event>
			<event>
				<eventTopic>
					TemperaturePeriodicValue
				</eventTopic>
				<eventKeyList>
					<eventKey>
						<name>HID</name>

						<dataType>String</dataType>
					</eventKey>
					<eventKey>
						<name>TimeStamp</name>
						<dataType>Long</dataType>
					</eventKey>
					<eventKey>

						<name>TemperatureValue</name>
						<dataType>Integer</dataType>
						<relatedStateVariable>Temperature</relatedStateVariable>
						<allowedValueRange>
							<max>50</max>
							<min>-30</min>

						</allowedValueRange>
						<unit>Celsius</unit>
					</eventKey>
				</eventKeyList>
				<metaInformation>
					<frequency>
						<value>0</value>
						<unit>Seconds</unit>

					</frequency>
					<eventTrigger></eventTrigger>
					<description>Periodic temperature report</description>
				</metaInformation>
			</event>
		</eventList>

    </device>
</root>