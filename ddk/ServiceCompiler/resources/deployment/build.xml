<project name="ServiceCompiler" basedir="." default="run">
  <property name="limbo.language" value="jse"/>
  <property name="limbo.platform" value="standalone"/>
  <property name="limbo.generationtype" value="all"/>
  <property name="limbo.protocol" value="TCP"/>
  <property name="limbo.loghandler" value="false"/>
  <property name="limbo.outputdirectory" value="generated"/>
  <property name="upnp" value="false"/>

  <target name="run">
    <java fork="yes" jar="${basedir}/bin/felix.jar" dir="${basedir}">
      <sysproperty key="limbo.wsdlfile" value="${limbo.wsdlfile}"/>
      <sysproperty key="limbo.language" value="${limbo.language}"/>
      <sysproperty key="limbo.platform" value="${limbo.platform}"/>
      <sysproperty key="limbo.generationtype" value="${limbo.generationtype}"/>
      <sysproperty key="limbo.protocol" value="${limbo.protocol}"/>
      <sysproperty key="limbo.loghandler" value="${limbo.loghandler}"/>
      <sysproperty key="limbo.outputdirectory" value="${limbo.outputdirectory}"/>
      <sysproperty key="upnp" value="${upnp}"/>
    </java>
  </target>
</project>
