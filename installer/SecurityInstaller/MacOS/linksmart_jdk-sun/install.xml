<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- 
    LinkSmart Installer

    To compile it :
    - go in the bin directory where you installed IzPack
    - call "compile ../linksmart/install.xml -b ../linksmart"
-->

<installation version="1.0">
    
    <variables>
        <variable name="jre_security_home" value="jre/lib/security"/>
    </variables>
    
    <!-- 
        The info section.
        The meaning of the tags should be natural ...
    -->
    <info>
        <appname>LinkSmart Middleware</appname>
        <appversion>0.9</appversion>
        <authors>
            <author name="LinkSmart Development Team" email="marco.jahn@fit.fraunhofer.de"/>
        </authors>
        <!-- <url>http://sourceforge.net/projects/linksmart/</url> -->
        <run-privileged />
    </info>

    <!-- 
        The gui preferences indication.
        Sets the installer window to 640x480. It will not be able to change the size.
    -->
    <guiprefs width="640" height="480" resizable="yes"/>

    <!-- 
        The locale section.
        Asks here to include the English and French langpacks.
    -->
    <locale>
        <langpack iso3="eng"/>
    </locale>

    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="Licence.txt"/>
        <res id="InfoPanel.info" src="Readme.txt"/>
    </resources>

    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="InfoPanel"/>
<!--        <panel classname="LicencePanel"/> -->
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="FinishPanel"/>
    </panels>

    <!-- 
        The packs section.
        We specify here our packs.
    -->

    <packs>
        <pack name="Base" required="yes">
            <description>Copies two files to: $JAVA_HOME/$jre_security_home</description>
            <file src="files/local_policy.jar" targetdir="$JAVA_HOME/$jre_security_home" override="asktrue"/>
            <file src="files/US_export_policy.jar" targetdir="$JAVA_HOME/$jre_security_home" override="asktrue"/>
        </pack>
    </packs>

</installation>
